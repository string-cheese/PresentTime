<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.byu.stringcheese.presenttime">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:name="android.support.multidex.MultiDexApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FriendInfoActivity"
            android:parentActivityName=".FriendInfoActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.byu.stringcheese.presenttime.FriendInfoActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddEventActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.byu.stringcheese.presenttime.MainActivity" />
        </activity>
        <activity
            android:name=".AddItemActivity"
            android:parentActivityName=".ItemInfoActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.byu.stringcheese.presenttime.ItemInfoActivity" />
        </activity>
        <activity
            android:name=".ItemInfoActivity"
            android:parentActivityName=".EventWishListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.byu.stringcheese.presenttime.EventWishListActivity" />
        </activity>
        <activity android:name=".EventInfoActivity" />
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".EventWishListActivity"
            android:label="@string/title_activity_event_wish_list"
            android:parentActivityName=".EventInfoActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.byu.stringcheese.presenttime.EventInfoActivity" />
        </activity>
    </application>

</manifest>
