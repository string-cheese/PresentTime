<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="@dimen/margin_medium">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView

                android:id="@+id/item_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/iphone"

                />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    >

                    <edu.byu.stringcheese.presenttime.main.events.ScollingTextView

                        android:id="@+id/item_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="iPhone 7"
                        android:ellipsize="end"
                        android:singleLine="false"
                        android:maxLines="2"
                        android:scrollHorizontally="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:freezesText="true"
                        android:textSize="16sp"
                        android:layout_weight=".7"
                        />
                    <TextView
                        android:id="@+id/item_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:layout_weight=".4"
                        android:textAlignment="textEnd"
                        android:text="$199"

                        android:textSize="15sp"
                        android:color="#fff" />

                </LinearLayout>

            <TextView
                android:paddingLeft="@dimen/margin_small"
                android:paddingRight="@dimen/margin_small"
                android:id="@+id/search_item_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/opaqueLabelBackground"
                android:fontFamily="sans-serif-light"
                android:layout_gravity="end"
                android:text="Walmart"
                android:textSize="15sp" />

            <ProgressBar

                android:paddingLeft="@dimen/margin_small"
                android:paddingRight="@dimen/margin_small"
                android:id="@+id/item_fund_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:max="100"
                android:minHeight="20dp"
                android:minWidth="200dp"
                android:progress="50"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>